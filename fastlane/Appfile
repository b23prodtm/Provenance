ugs ENV["app_ugs_id"]
ugstv ENV["app_ugs_id"]

app_identifier "#{ugs}" 

for_lane 'beta' do
  for_platform :ios do
      app_identifier "#{ugs}bt"
  end
  for_platform :tvos do
      app_identifier "#{ugstv}bt"
  end
end
